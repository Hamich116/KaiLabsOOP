<Page x:Class="FirstLab.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirstLab.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" Width="464">
            <Button Content="Круг" Click="ShowCirclePageClick" Margin="15,0,0,0" FontSize="25"></Button>
            <Button Content="Элипс" Click="ShowElipsePageClick" Margin="15,0,0,0" FontSize="25"></Button>
            <Button Content="Квадрат" Click="ShowSquarePageClick" Margin="15,0,0,0" FontSize="25"></Button>
            <Button Content="Прямоугольники" Click="ShowPramougolnikPageClick" Margin="15,0,0,0" FontSize="25"></Button>
        </StackPanel>
        <Frame Grid.Row="1" x:Name="ObjectShowFrame"></Frame>
    </Grid>
</Page>
